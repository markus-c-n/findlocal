<%= form_with model: @item, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>
  <div>
    <%= form.label :stock_quantity %>
    <%= form.number_field :stock_quantity %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :pictures %>
    <%= form.text_field :pictures %>
  </div>
  <div>
    <%= form.label :visible %>
    <%= form.check_box :visible %>
  </div>

  <div>
    <%= form.label :main_category %>
    <%= form.collection_select :main_category, MainCategory.all, :id, :name, { include_blank: true } %>
  </div>

  <div>
    <%= form.label :sub_category %>
    <%= form.collection_select :sub_category, SubCategory.where(parent_id: @item.main_category), :id, :name, { include_blank: true } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
