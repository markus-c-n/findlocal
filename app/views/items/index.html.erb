<div class="p-5 h-screen">

  <div class="relative" style="width: 100%; height: 100%;">
    <div style="width: 100%; height: 90%;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

    <div class="absolute bottom-20 left-40 bg-slate-100 p-4 mb-5 bg-white rounded-lg shadow-md p-6 content-center flex justify-center">
        <div class="flex flex-col">
          <%= form_with url: items_path, method: :get, class: "mb-1" do %>
            <%= text_field_tag :query,
                  params[:query],
                  class: "p-1 bg-slate-50 shadow-lg rounded-md w-max",
                  placeholder: "Search for an item or category"
              %>
            <%= submit_tag "Search", name: "", class: "p-1 bg-slate-50 rounded-md text-slate-900 shadow-md" %>
          <% end %>
          <div class="flex flex-row">
            <p class="m-1 p-1">Popular categories:</p>
            <% @categories.each do |category| %>
                <%= link_to category, items_path(query: params[:query], category: category), class: "p-1 m-1 bg-slate-100 rounded-md" %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
