<%= form_with(model: @item, url: items_path, method: :post) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, step: "any", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :stock_quantity %>
    <%= form.number_field :stock_quantity, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div>
    <%= form.label :main_category %>
     <%= form.collection_select :main_category_id, MainCategory.all, :id, :name, { include_blank: true }, { data: { controller: "item-form", action: "change->item-form#updateSubCategories" } } %>
  </div>

  <div>
    <%= form.label :sub_category %>
    <%= form.collection_select :sub_category, [], :id, :name, { include_blank: true }, {}, data: { target: "item-form.subCategory" } %>
  </div>



  <!-- Add other item attributes here as needed -->

  <%= form.hidden_field :store_id, value: params[:store_id] %>
  <%= form.submit "Create Item", class: "btn btn-primary" %>
<% end %>
